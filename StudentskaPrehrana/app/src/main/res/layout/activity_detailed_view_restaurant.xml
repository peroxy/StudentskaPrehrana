<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_detailed_view_restaurant"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.fri.studentskaprehrana.DetailedViewRestaurant">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:text="TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:textAppearance="@android:style/TextAppearance.Material.Headline"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="40dp"
                android:textAlignment="textStart"
                android:id="@+id/tv_name"
                android:textAllCaps="false" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5">

                    <TextView
                        android:text="Naslov"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/lb_address"
                        android:layout_weight="1"
                        android:textStyle="normal|bold"
                        android:textSize="10sp"
                        android:textAllCaps="true"
                        android:layout_marginBottom="3dp" />

                    <TextView
                        android:text="TextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@+id/tv_Name"
                        android:layout_toEndOf="@+id/tv_Name"
                        android:layout_weight="1"
                        android:id="@+id/tv_address" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5">

                    <TextView
                        android:text="Telefon"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/lb_phone"
                        android:textSize="10sp"
                        android:textAllCaps="true"
                        android:textStyle="normal|bold"
                        android:layout_marginBottom="3dp" />

                    <TextView
                        android:text="TextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_Name"
                        android:layout_alignStart="@+id/tv_Name"
                        android:id="@+id/tv_phone" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="30dp">

                <TextView
                    android:text="Ponudba"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/lb_menu"
                    android:textSize="10sp"
                    android:textStyle="normal|bold"
                    android:textAllCaps="true"
                    android:layout_marginBottom="3dp" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="3dp">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5">

                        <TextView
                            android:text="Juha"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/lb_soup"
                            android:textSize="10sp" />

                        <TextView
                            android:text="TextView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/tv_soup" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5">

                        <TextView
                            android:text="Solata"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/lb_salad"
                            android:textSize="10sp"
                            android:layout_marginBottom="1dp" />

                        <TextView
                            android:text="TextView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/tv_salad" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5">

                        <TextView
                            android:text="Glavna jed"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/lb_mainCourse"
                            android:textSize="10sp"
                            android:layout_marginBottom="1dp" />

                        <TextView
                            android:text="TextView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv_phone"
                            android:layout_alignStart="@+id/tv_phone"
                            android:id="@+id/tv_mainCourse"
                            android:textSize="14sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5">

                        <TextView
                            android:text="Sladica"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/lb_dessert"
                            android:textSize="10sp" />

                        <TextView
                            android:text="TextView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/tv_dessert" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
