<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/menuItem"
        android:layout_marginBottom="10dp">

        <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_menuNumber"
            android:textStyle="normal|bold"
            android:textSize="12sp"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="3dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="3dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.5">

                <TextView
                    android:text="Juha"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/lb_soup"
                    android:textSize="10sp" />

                <TextView
                    android:text="TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_soup" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.5">

                <TextView
                    android:text="Solata"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/lb_salad"
                    android:textSize="10sp"
                    android:layout_marginBottom="1dp" />

                <TextView
                    android:text="TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_salad" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.5">

                <TextView
                    android:text="Glavna jed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/lb_mainCourse"
                    android:textSize="10sp"
                    android:layout_marginBottom="1dp" />

                <TextView
                    android:text="TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_phone"
                    android:layout_alignStart="@+id/tv_phone"
                    android:id="@+id/tv_mainCourse"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.5">

                <TextView
                    android:text="Sladica"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/lb_dessert"
                    android:textSize="10sp" />

                <TextView
                    android:text="TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_dessert" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>